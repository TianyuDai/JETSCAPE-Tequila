<?xml version="1.0"?>

<jetscape>
  
  <nEvents> 200 </nEvents>
  <setReuseHydro> true </setReuseHydro>
  <nReuseHydro> 1 </nReuseHydro>
  
  <JetScapeWriterAscii> on </JetScapeWriterAscii>
  <outputFilename>test_out</outputFilename>
  <vlevel> 0 </vlevel>
  <nEvents_printout> 1 </nEvents_printout>

  <Random>
    <seed>1</seed>
  </Random>
  <!-- Inital State Module  -->
  <IS>
    <initial_profile_path>/global/cscratch1/sd/td115/AuAu200_total/centrality20-30</initial_profile_path>
  </IS>
  
  <!-- Hard Process -->
  <Hard>

    <!-- Parton Gun test with fixed pT and fixed IS pos = 0  -->
    <PGun>
      <name>PGun</name>
      <pT>100</pT>
      <parID>21</parID>
      <!--useHybridHad>0</useHybridHad-->
    </PGun>

  </Hard>
  
  <!--Preequilibrium Dynamics Module -->
  <Preequilibrium>
    <NullPreDynamics> </NullPreDynamics>
  </Preequilibrium>
  
  <!-- Hydro  Module  -->
  <Hydro>

    <!-- Test Brick if bjorken_expansion_on="true", T(t) = T * (start_time[fm]/t)^{1/3} -->
    <!--Brick>
      <name>Brick</name>
      <T>0.3</T>
    </Brick-->

    <hydro_from_file>
      <name>Hydro from file </name>
      <read_in_multiple_hydro>1</read_in_multiple_hydro>
      <boost_invariant_> 1</boost_invariant_> 
      <hydro_files_folder>/global/cscratch1/sd/td115/AuAu200_total/centrality20-30</hydro_files_folder>
    </hydro_from_file>
  </Hydro>
  
  <!--Eloss Modules -->
  <Eloss>

    <deltaT>0.1</deltaT>
    <formTime> -0.1</formTime>
    <maxT>1.5</maxT>
    <tStart> 0.5 </tStart> <!-- Start time of jet quenching, proper time, fm/c   -->
    <mutex>ON</mutex>


    <Tequila>
      <name> Tequila </name>
      <pcut> 2. </pcut>
      <Q0> 2.0 </Q0>
      <hydro_Tc> 0.16 </hydro_Tc>
      <recoil_on> 1 </recoil_on>
      <muomega_over_T> 4. </muomega_over_T>
      <muqperp_over_T> 4. </muqperp_over_T>
      <beta_perp> 2. </beta_perp>
      <beta_para> 2. </beta_para>
      <T_star> 0.24 </T_star> 
      <alphas_hard_inel> 0.1 </alphas_hard_inel>
      <path>../src/jet/Tequila/</path>
    </Tequila>

  </Eloss>
  
  <!-- Jet Hadronization Module -->
  <JetHadronization>
    <name>colorless</name>
    <take_recoil>1</take_recoil>
    <eCMforHadronization>100</eCMforHadronization>
  </JetHadronization>
  
</jetscape>
